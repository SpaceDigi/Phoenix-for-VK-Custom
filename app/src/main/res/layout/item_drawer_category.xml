<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:background="?android:colorBackground"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:padding="12dp"
            android:id="@+id/item_drawer_category_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon"
            android:layout_toStartOf="@+id/icon"
            android:textSize="@dimen/font_size_title" />

        <biz.dealnote.messenger.view.ColorFilterImageView
            app:filter_color="?attr/icon_color_static"
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_menu_24_white" />

    </RelativeLayout>

    <View
        android:background="?list_divider_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>