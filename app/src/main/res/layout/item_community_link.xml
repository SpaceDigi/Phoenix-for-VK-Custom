<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:layout_centerVertical="true"
        android:id="@+id/icon_root"
        android:layout_width="48dp"
        android:layout_height="48dp">

        <biz.dealnote.messenger.view.CircleImageButton
            android:padding="12dp"
            app:backgroundColor="?attr/colorAccent"
            app:iconColor="?attr/icon_color_on_colored_back"
            android:src="@drawable/ic_external"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="end|bottom"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_root"
        android:layout_toEndOf="@+id/icon_root"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            tools:text="Phoenix Lite - Google Play"
            android:id="@+id/title"
            android:textColor="?attr/textColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="play.google.com"
            android:id="@+id/subtitle"
            android:textColor="?attr/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>